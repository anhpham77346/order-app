generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  fullName    String
  email       String    @unique
  password    String
  role        UserRoll
  phoneNumber String?
  createdAt   DateTime  @default(now())
  deletedAt   DateTime? // Thời gian xóa có thể là null nếu bản ghi chưa bị xóa
}

model Table {
  id              Int       @id @default(autoincrement())
  name            String
  seatingCapacity Int
  qrCode          String?
  stringCode      String?   @unique
  createdAt       DateTime  @default(now())
  deletedAt       DateTime?
  isActive        Boolean

  // 1-n vs Order
  orders Order[]
}

model Order {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  deletedAt DateTime?

  // Khóa ngoại tham chiếu đến bảng Table
  tableId Int
  table   Table @relation(fields: [tableId], references: [id])

  orderItems OrderItem[]
}

model OrderItem {
  id        Int       @id @default(autoincrement())
  quantity  Int
  unitPrice Int
  createdAt DateTime  @default(now())
  deletedAt DateTime?

  // Khóa ngoại tham chiếu đến bảng Item
  itemId Int
  item   Item @relation(fields: [itemId], references: [id])

  // Khóa ngoại tham chiếu đến bảng Order
  orderId Int
  order   Order @relation(fields: [orderId], references: [id])
}

model Item {
  id           Int          @id @default(autoincrement())
  name         String
  description  String?
  price        Int
  category     ItemCategory // Loại món ăn
  availability Boolean // Còn hàng hay hết hàng
  createdAt    DateTime     @default(now())
  deletedAt    DateTime?
  imgLink      String?

  orderItems OrderItem[]
}

enum UserRoll {
  USER
  ADMIN
}

enum ItemCategory {
  DESSERT
  MAIN_COURSE
  APPETIZER
  BEVERAGE
  SNACK
}
